#!/usr/bin/env bash
# Script that lists current directory files and prints only the part after the first dash

for file in *     # '*' lists all non-hidden files
do
  # Check if the filename contains a dash
  if [[ "$file" == *-* ]]; then
    # Extract the part after the first dash
    echo "${file#*-}"
  else
    # If no dash, print the whole name
    echo "$file"
  fi
done
